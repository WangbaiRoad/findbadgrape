page{
  background: rgb(240, 243, 219);
}

swiper{
  width: 750rpx;
  height: 400rpx;
}
swiper image{
  width: 100%;
  height: 400rpx;
}
.head{
  display: flex;
  flex-direction: column;
  align-items: center; 
}

#info{ 
  font-size: 35rpx;
  font-weight: bold;
  margin: 0rpx;
  padding: 30rpx;
}
#info:hover{
  color: rgb(122, 97, 235);
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center ;
}
.avatar{
  width: 160px;
  height: 160px;
  border: grey 1px solid;
  border-radius: 100px;
  margin: 20rpx;
}
.motto{
  font-size: 40rpx;
  font-weight: bold;
}
.container-button{
  background-color: rgb(110, 204, 123);
  color: rgb(241, 235, 221);
  margin-top: 70rpx;
  border:rgb(111, 194, 139) 1px solid;
  padding: 5rpx 50rpx;
  border-radius: 50rpx;
  text-align: center;
  box-shadow: 1rpx 1rpx 6rpx 3rpx gray ;
}
.container-button:hover{
  background: rgb(85, 160, 114);
}
.journey{
  line-height: 80rpx;
}
.center{
  text-align: center;
}
.footer{
  display: flex;
  flex-direction: column;
  align-items: center; 
}
.row_flex{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  width: 590rpx;
}